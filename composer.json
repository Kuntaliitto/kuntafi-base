{
    "name": "kuntaliitto/kuntafibase",
    "description": "Kuntafi base template build with Drupal 8",
    "type": "drupal-profile",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "bin-dir": "bin/"
    },
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Antti Tuppurainen",
            "email": "antti.tuppurainen@industry62.com"
        },
        {
            "name": "Mikko Malmgren",
            "email": "mikko.malmgren@kuntaliitto.fi"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {        
        "wikimedia/composer-merge-plugin": "^1.4.1",
        "drupal/allowed_formats": "1.x-dev",
        "drupal/better_exposed_filters": "^3.0",
        "drupal/embed": "~1.0",
        "drupal/facets": "~1.0",
        "drupal/link_attributes": "~1.0",
        "drupal/media_entity_document": "^1.1",
        "drupal/search_api": "~1.4"
    },
    "require-dev": {},
    "extra": {
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "merge-plugin": {
            "require": [
                "kuntafibase/composer.profile.json",
                "kuntafibase/composer.server.json"
            ],
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": true,
            "replace": false,
            "ignore-duplicates": true
        }
    },
    "replace": {
        "burdamagazinorg/infinite_theme": "*",
        "burdamagazinorg/infinite_module": "*",
        "drupal/ivw_integration": "*",
        "drupal/nexx_integration": "*",
        "drupal/riddle_marketplace": "*",
        "valiton/harbourmaster": "*",
        "drupal/adsense": "*",
        "drupal/liveblog": "*"
    }
}
